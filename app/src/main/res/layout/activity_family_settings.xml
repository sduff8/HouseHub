<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image_set"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/profile_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        app:civ_border_width="5dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/create_family_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image_set"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Create Family Group"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/family_name_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_family_text"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edittext_design"
        android:drawableStart="@drawable/ic_username"
        android:gravity="center"
        android:padding="6dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/create_family_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/family_name_set"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Create"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/join_family_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_family_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Join Family"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/join_family_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/join_family_text"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edittext_design"
        android:drawableStart="@drawable/ic_username"
        android:gravity="center"
        android:padding="6dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/join_family_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/join_family_id"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Send Invite"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp" />


</RelativeLayout>
