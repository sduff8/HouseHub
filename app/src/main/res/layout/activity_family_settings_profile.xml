<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <include
        android:id="@+id/family_settings_profile_page_toolbar"
        layout="@layout/app_bar_layout" />

    <ImageView
        android:id="@+id/family_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/family_settings_profile_page_toolbar"
        android:src="@drawable/profile_image"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/family_name_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/family_image"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edittext_design"
        android:drawableStart="@drawable/ic_username"
        android:gravity="center"
        android:hint="Update Family Name"
        android:padding="6dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/create_family_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/family_name_set"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/family_invite_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_family_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Family Invite Code"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/family_invite_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/family_invite_id_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="234I234H5U43NUJ4H"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>
